<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/bind_card_bg">

	<RelativeLayout style="@style/ActionBar_Container"
					android:id="@+id/top"
		>
		<TextView
			android:id="@+id/back"
			style="@style/BackStyleIncome"
			/>
		<TextView
			style="@style/ActionBar_Title"
			android:text="银行卡详情" />

	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:layout_below="@id/top"
		android:layout_marginTop="15dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:id="@+id/middle_layout"
		android:orientation="vertical"
		>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/owner_layout"
			>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="持卡人"
				android:textSize="@dimen/bank_name_size"
				android:textColor="#333333"
				android:id="@+id/owner_textview"
				/>
			<ImageView
				android:id="@+id/img_info"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/explain_bankname"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="46dp"
				android:id="@+id/ower_edittext"
				android:layout_toRightOf="@id/owner_textview"
				android:layout_toLeftOf="@id/img_info"
				android:background="@null"
				android:singleLine="true"
				android:gravity="center|right"
				android:textColor="#AAAAAA"
				android:textSize="@dimen/bank_name_size"
				/>

			<View
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:layout_below="@id/ower_edittext"
				android:background="@color/bind_card_bg"
				/>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/id_card_num_layout"
			>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="身份证号"
				android:textSize="@dimen/bank_name_size"
				android:textColor="#333333"
				android:id="@+id/id_card_num"
				/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="46dp"
				android:id="@+id/id_card_num_textview_tx"
				android:layout_toRightOf="@id/id_card_num"
				android:background="@null"
				android:singleLine="true"
				android:paddingLeft="8dp"
				android:textSize="@dimen/bank_name_size"
				android:gravity="right|center"
				android:textColor="#AAAAAA"
				/>
			<View
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:layout_below="@id/id_card_num_textview_tx"
				android:background="@color/bind_card_bg"
				/>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/owner_bank_layout">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="开户银行"
				android:textSize="@dimen/bank_name_size"
				android:textColor="#333333"
				android:id="@+id/owner_bank_textview"
				/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="46dp"
				android:id="@+id/ower_bank_edittext"
				android:layout_toRightOf="@id/owner_bank_textview"
				android:background="@null"
				android:singleLine="true"
				android:gravity="center|right"
				android:textColor="#AAAAAA"
				android:textSize="@dimen/bank_name_size"
				/>

			<View
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:layout_below="@id/ower_bank_edittext"
				android:background="@color/bind_card_bg"
				/>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/bank_layout"
			>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="开户支行"
				android:textSize="@dimen/bank_name_size"
				android:textColor="#333333"
				android:id="@+id/bank"
				/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="46dp"
				android:id="@+id/bank_tx"
				android:layout_toRightOf="@id/bank"
				android:background="@null"
				android:singleLine="true"
				android:paddingLeft="8dp"
				android:textSize="@dimen/bank_name_size"
				android:gravity="right|center"
				android:textColor="#AAAAAA"
				/>
			<View
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:layout_below="@id/bank_tx"
				android:background="@color/bind_card_bg"
				/>
		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/card_layout"
			>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="银行卡号"
				android:textSize="@dimen/bank_name_size"
				android:textColor="#333333"
				android:id="@+id/card_textview"
				/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="46dp"
				android:id="@+id/card_edittext"
				android:layout_toRightOf="@id/card_textview"
				android:background="@null"
				android:singleLine="true"
				android:paddingLeft="8dp"
				android:textSize="@dimen/bank_name_size"
				android:gravity="right|center"
				android:textColor="#AAAAAA"
				/>
			<View
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:layout_below="@id/card_edittext"
				android:background="@color/bind_card_bg"
				/>
		</RelativeLayout>





	</LinearLayout>


	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/middle_layout"
		android:id="@+id/notice"
		android:paddingTop="10dp"
		android:paddingBottom="20dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:textSize="@dimen/notice"
		android:textColor="#AAAAAA"
		android:text="温馨提示：具体支行名称需拨打银行客服咨询确定，如不正确将会影响您的提现，平台将会对信息传输进行加密处理，确保个人信息安全。"
		/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/delete"
		android:text="解除绑定"
		android:textColor="@color/white"
		android:textSize="18sp"
		android:gravity="center"
		android:background="@drawable/button_red_bg"
		android:layout_alignParentBottom="true"
		android:paddingTop="8dp"
		android:paddingBottom="8dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginBottom="30dp"
		/>

</RelativeLayout>