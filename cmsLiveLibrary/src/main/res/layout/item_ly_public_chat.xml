<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/public_chat_margin_default"
    android:paddingRight="@dimen/public_chat_margin_default"
    android:paddingTop="@dimen/public_chat_tip_margin_ver"
    android:id="@+id/item_ly_public_chat" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/item_tv_public_chat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="saskd"
            android:textColor="@color/public_chat_other_tip"
            android:textSize="@dimen/public_chat_other" >
        </TextView>

        <TextView
            android:id="@+id/item_tv_public_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="11:11:11"
            android:textColor="@color/public_chat_other_tip"
            android:textSize="@dimen/public_chat_other" />
    </LinearLayout>

    <com.gensee.view.MyTextViewEx
        android:id="@+id/item_tv_public_chat_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/public_chat_content_margin_ver"
        android:text="alsjdflajsdlfjadl"
        android:textColor="@color/public_chat_content"
        android:textSize="@dimen/public_chat_other" >
    </com.gensee.view.MyTextViewEx>

    <ImageView
        android:id="@+id/iv_public_chat_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/public_chat_tip_margin_ver"
        android:background="@drawable/chat_item_line" />

</LinearLayout>